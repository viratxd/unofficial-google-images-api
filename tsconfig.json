{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "controllers/*": ["controllers/*"],
      "utils/*": ["utils/*"],
      "schema/*": ["schema/*"],
      "router/*": ["router/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
